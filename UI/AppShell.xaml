<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UI"
    xmlns:pages="clr-namespace:UI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="UI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Crear"
        ContentTemplate="{DataTemplate pages:CrearPersona}"
        Route="CreatePage"/>

    <ShellContent
        Title="Editar"
        ContentTemplate="{DataTemplate pages:EditarPersona}"
        Route="EditarPage"></ShellContent>
    <ShellContent
        Title="Detalles"
        ContentTemplate="{DataTemplate pages:DetallesPersona}"
        Route="DetallesPage"></ShellContent>

</Shell>
